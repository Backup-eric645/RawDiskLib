{
  "version": "0.1.0",

  "title": "RawDiskLib",
  "description": "Library to interact with Windows' DeviceIoControl method",
  "authors": [ "LordMike" ],

  "packOptions": {
    "owners": [ "LordMike" ],
    "tags": [ "Raw disk", "Disk" ],
    "projectUrl": "https://github.com/lordmike/rawdisklib",
    "licenseUrl": "https://github.com/lordmike/rawdisklib/blob/master/LICENSE.txt",
    "repository": {
      "type": "git",
      "url": "https://github.com/lordmike/rawdisklib"
    }
  },

  "buildOptions": {
    "publicSign": true,
    "keyFile": "../SigningKey.snk"
  },

  "dependencies": {
    "DeviceIOControlLib": "0.1.0-alpha"
  },

  "frameworks": {
    "netstandard1.3": {
      "buildOptions": {
        "define": [ "NETCORE" ]
      },
      "dependencies": {
        "System.IO.FileSystem.DriveInfo": "4.0.0",
        "System.Text.RegularExpressions": "4.1.0"
      },
      "imports": "dnxcore50"
    },
    "net20": {
      "buildOptions": {
        "define": [ "NET20" ]
      }
    },
    "net35": {
      "buildOptions": {
        "define": [ "NET35" ]
      }
    },
    "net40": {}
  }
}
